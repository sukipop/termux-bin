#!/data/data/com.termux/files/usr/bin/zsh

function help {
    print "Usage: colors â€” Display a dazzling grid of terminal colors."
          "Options:"
          "  -h, --help    Show this help message and exit."
          "  -c, --clear   Clears the terminal screen before displaying the colors."
}

function parse_options {
    while [[ "$#" -gt 0 ]]; do
        case "$1" in
            -h|--help|--help-all)
                help
                exit 0
                ;;
            -c|--clear)
                clear
                ;;
            *)
                error "Unknown option: ${1}"
                exit 1
                ;;
        esac
        shift
    done
}

function main {
    parse_options "$@"
    for i in {0..255}; do
        print -Pn "%K{$i}  %k${(l:3::0:)i} " ${${(M)$((i%6)):#3}:+$'\n'}
    done
}

main "$@" || exit 1
